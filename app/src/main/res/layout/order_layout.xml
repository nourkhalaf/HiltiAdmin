<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/button_background"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="User name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_user_name"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:text="Phone number"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/button_background"
             android:backgroundTint="#4CAF50"
            android:text="Total price"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phone_number"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:text="Address, City"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address_city"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:text="Date Time"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/order_shipping_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:text="Shipping location"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/show_orders"
            android:textColor="@android:color/black"
             android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/order_shipping_location"/>
    </RelativeLayout>


</RelativeLayout>