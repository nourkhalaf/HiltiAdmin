<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layoutDirection="ltr"
    app:cardCornerRadius="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="8dp"
         >

        <TextView
            android:id="@+id/cart_item_layout_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_toStartOf="@+id/cart_item_layout_price"
            android:inputType="textMultiLine"
            android:layout_weight="1"
            android:textAlignment="center"
            android:padding="8dp"
            android:text="عنوان الموضوع"/>
        <TextView
            android:id="@+id/cart_item_layout_price"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textSize="16dp"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:backgroundTint="#4CAF50"
            android:text="100"/>


        <TextView
            android:id="@+id/cart_item_layout_brand"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_below="@+id/cart_item_layout_name"
             />
        <TextView
            android:id="@+id/cart_item_layout_category"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:layout_below="@+id/cart_item_layout_name"
            android:layout_toEndOf="@+id/cart_item_layout_brand"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/cart_item_layout_model"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:layout_below="@+id/cart_item_layout_name"
            android:layout_toEndOf="@+id/cart_item_layout_brand"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/cart_item_layout_note"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"

            android:padding="8dp"
            android:layout_below="@+id/cart_item_layout_brand"
            android:text="User Notes display here"/>
        <TextView
            android:id="@+id/cart_item_layout_quantity"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:text="Quantity = 1"
            android:layout_below="@+id/cart_item_layout_note"
            />
        <TextView
            android:id="@+id/cart_item_layout_code"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:padding="8dp"
            android:text="الكود : 112"
            android:layout_toEndOf="@+id/cart_item_layout_quantity"
            android:layout_below="@+id/cart_item_layout_note"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>